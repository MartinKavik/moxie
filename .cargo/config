[alias]

bench-core = """
bench
    --package moxie
    --package topo
    --package topo-macro
"""

check-core = """
check --all-targets
    --package moxie
    --package topo
    --package topo-macro
"""

docs-all = "doc --all"

test-core = """
test
    --package moxie
    --package topo
    --package topo-macro
"""

core-flow = """
watch --clear
    -x fmt
    -x check-core
    -x check-dom-lib
    -x check-dom-todo
    -x docs-all
    -x test-core
"""

check-dom-lib = "check --package moxie-dom --target wasm32-unknown-unknown"
check-dom-hacking = "check --package dom-hacking --target wasm32-unknown-unknown"
check-dom-todo = "check --package todomvc-moxie --target wasm32-unknown-unknown"

watch-dom-hacking = "web start --package dom-hacking"
