bench
    --package moxie
    --package topo
    --package topo-macro
"""

check-core = """
check --all-targets
    --package moxie
    --package topo
    --package topo-macro
"""

docs-core = """
doc --no-deps
    --package moxie
    --package topo
    --package topo-macro
"""

test-core = """
test
    --package moxie
    --package topo
    --package topo-macro
"""

watch-core = """
watch --clear
    -x fmt
    -x check-core
    -x check-dom-lib
    -x check-dom-hacking
    -x test-core
"""

check-dom-lib = "web check --package moxie-dom"
check-dom-hacking = "web check --package dom-hacking"

test-dom = "web test --package moxie-dom"
