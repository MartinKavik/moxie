bench
    --package moxie
    --package mox
    --package topo
    --package topo-macro
"""

check-core = """
check --all-targets
    --package moxie
    --package mox
    --package topo
    --package topo-macro
"""

check-dom = """
check --all-targets
    --package moxie-dom
    --package dom-hacking
"""

docs-core = """
doc --no-deps
    --package moxie
    --package mox
    --package topo
    --package topo-macro
"""

test-core = """
test
    --package moxie
    --package mox
    --package topo
    --package topo-macro
"""

watch-core = """
watch --clear
    -x fmt
    -x check-core
    -x check-dom
    -x test-core
"""

test-dom = "web test --package moxie-dom"
watch-dom-hacking = "web start --package dom-hacking"
